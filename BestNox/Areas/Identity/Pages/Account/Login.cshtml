@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="login-dark" style="background-image: url(@($"{Request.Scheme}://{Request.Host}{Request.PathBase}")/images/star-sky.jpg););">
    
    <environment include="Demo">
        <div class="alert alert-success" role="alert">
            <span><strong>お知らせ</strong> 展示用システムですので、以下のアカウントでのみログインできます。</span>
            <p>ID: guest1234<br>Password: Guest1234!</p>
        </div>
    </environment>
        
    <form id="account" method="post">
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
        <div class="form-group">
            <input asp-for="Input.Username" class="form-control" placeholder="Username" />
            <span asp-validation-for="Input.Username" class="text-danger"></span><!-- バリデーションの設定をする場所は付属のcsだよ -->
        </div>
        <div class="form-group">
            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span><!-- パスワード要件はStartUp.csで設定（やってない） -->
        </div>
        <div class="form-group">
            <div class="checkbox">
                <!-- "Remember Me"という文言は付属のcsのモデルクラスで指定できる -->
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Log In</button></div>
        <a class="forgot" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Forgot your name or password?</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
